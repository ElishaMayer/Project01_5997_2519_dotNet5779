<UserControl x:Class="PLWPF.UserControls.AddressPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PLWPF.UserControls"
             mc:Ignorable="d" LostFocus="UserControl_LostFocus">
    <StackPanel MinWidth="100" ZIndex="0">
        <TextBox x:Name="TexBoxAddress" Height="30" HorizontalAlignment="Stretch"
                 TextChanged="TexBoxAddress_TextChanged" />
        <ListBox x:Name="ListBoxSuggestions" BorderBrush="Black" BorderThickness="1" Height="120"
                 Visibility="Collapsed" SelectionChanged="ListBoxSuggestions_SelectionChanged" />
    </StackPanel>
</UserControl>