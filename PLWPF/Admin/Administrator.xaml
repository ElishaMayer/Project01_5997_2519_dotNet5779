<Window x:Class="PLWPF.Admin.Administrator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF.Admin"
        mc:Ignorable="d"
        Title="Administrator" Height="270" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        
        </Grid.RowDefinitions>
        <GroupBox Header="Trainee" Margin="2" Background="LightBlue" BorderBrush="Black" BorderThickness="1" Grid.Column="0">
            <StackPanel>
                <Button x:Name="AddTrainee" Content="Add trainee" Margin="10"  Width="100" Height="40" Grid.Column="1" Grid.Row="1" Click="AddTrainee_Click" RenderTransformOrigin="-0.409,-0.034"/>
                <GroupBox Header="Update" Background="LightBlue" BorderBrush="Black" BorderThickness="1" Grid.Column="0" Margin="1">
                    <StackPanel Orientation="Horizontal">
                         <ComboBox x:Name="ComboxUpdateTrainee" ItemsSource="{Binding}" Width="110" Height="25" Margin="10"/>
                         <Button x:Name="Updatetrainee" Content="Update trainee" Margin="10"  Height="23" Grid.Column="1" Grid.Row="2"  HorizontalAlignment="Right" Click="Updatetrainee_Click"/>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="Remove" Background="LightBlue" BorderBrush="Black" BorderThickness="1" Grid.Column="0" Margin="1">
                    <StackPanel Orientation="Horizontal">
                        <ComboBox x:Name="ComboxRemoveTrainee" ItemsSource="{Binding}" Width="110" Height="25" Margin="10"/>
                        <Button x:Name="Removetrainee" Content="Remove trainee" Margin="10"  Height="23" Grid.Column="1" Grid.Row="2"  HorizontalAlignment="Right" Click="Removetrainee_Click" />
                    </StackPanel>
                </GroupBox>

            </StackPanel>
        </GroupBox>
      


    </Grid>
</Window>
