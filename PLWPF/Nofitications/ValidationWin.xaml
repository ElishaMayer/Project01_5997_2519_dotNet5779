<mah:MetroWindow x:Class="PLWPF.Nofitications.ValidationWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF.Nofitications"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="Validation" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <TextBlock TextWrapping="Wrap" x:Name="TextBlock" Text="Empty Win" Foreground="{DynamicResource LabelTextBrush}" HorizontalAlignment="Center" Margin="20"></TextBlock>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Yes" Style="{DynamicResource SquareButtonStyle}" Padding="16,8,16,8" Margin="10,10,5,10" HorizontalAlignment="Right" Click="Button_Click_Yes"></Button>
            <Button Content="No" Style="{DynamicResource SquareButtonStyle}" Padding="16,8,16,8" Margin="5,10,10,10" HorizontalAlignment="Right" Click="Button_Click_No"></Button>
        </StackPanel>
    </StackPanel>
</mah:MetroWindow>
